// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(500)
  img         String   @db.VarChar(500)
  height      Float
  read          String?
  dateStarted   String?  @db.VarChar(100)
  dateFinished  String?  @db.VarChar(100)
  author        String?  @db.VarChar(500)
  pages       Int?
  genre       String?  @db.VarChar(255)
  description String?  @db.Text
  rating      Int?     // Legacy - to be removed after migration

  // Multi-factor rating system (1-5 scale each)
  ratingWriting       Int?
  ratingPlot          Int?
  ratingCharacters    Int?
  ratingPacing        Int?
  ratingWorldBuilding Int?
  ratingEnjoyment     Int?
  ratingRecommend     Int?
  ratingOverall       Float?            // Auto-calculated or manual override
  ratingOverrideManual Boolean @default(false)

  shelf       Int      @default(1)
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([title])
  @@index([author])
  @@index([read])
  @@index([shelf])
  @@index([position])
  @@index([rating])
  @@index([ratingOverall])
}

model Setting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model SourdoughLoaf {
  id              Int      @id @default(autoincrement())
  date            DateTime @default(now())
  starterFedTime  String?  @db.VarChar(50)  // Time starter was fed before bake
  starterFedDate  String?  @db.VarChar(50)  // Date starter was fed (if different from loaf date)
  initialMixTime  String?  @db.VarChar(50)  // Time dough was mixed (optional, set later)
  mixIndoorTemp   Int?     // Indoor temperature in °F at time of mix
  temperature     Int?     // Outside temperature in °F at time of starter feed
  indoorTempMix   Int?     // Indoor temperature in °F at time of starter feed
  imageUrls       Json?    // Array of Vercel Blob URLs for loaf photos
  // Legacy ingredient fields - kept for backwards compatibility during migration
  flourGrams      Int?
  flourType       String?  @db.VarChar(255)
  waterGrams      Int?
  starterGrams    Int?
  // New flexible ingredients relationship
  ingredients     SourdoughIngredient[]
  stretchFolds    Json?    // Array of {time, indoorTemp?}, e.g., [{"time": "10:00", "indoorTemp": 72}]
  firstProofTime     String?  @db.VarChar(50)  // Time first proof started
  firstProofLocation String?  @db.VarChar(50)  // "oven", "counter", or "fridge"
  firstProofIndoorTemp Int?   // Indoor temperature when first proof started
  secondProofTime    String?  @db.VarChar(50)  // Time second proof started
  secondProofLocation String? @db.VarChar(50)  // "oven", "counter", or "fridge"
  secondProofIndoorTemp Int?  // Indoor temperature when second proof started
  dutchOven       String?  @db.VarChar(50)  // "cast-iron" or "ceramic"
  bakeEvents      Json?    // Array of {time, temp, date?}, e.g., [{"time": "14:00", "temp": 450, "date": "2024-01-15"}]
  bakeEndTime     String?  @db.VarChar(50)  // Time loaf was removed from oven
  bakeEndDate     String?  @db.VarChar(50)  // Date loaf was removed (if different from loaf date)
  crossSectionWidth  Float?  // Width of cross section in inches
  crossSectionHeight Float?  // Height of cross section in inches
  notes           String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([date])
}

model SourdoughIngredient {
  id             Int      @id @default(autoincrement())
  loafId         Int
  loaf           SourdoughLoaf @relation(fields: [loafId], references: [id], onDelete: Cascade)
  name           String   @db.VarChar(100)  // "flour", "water", "starter", "salt", or custom
  grams          Int
  details        String?  @db.VarChar(255)  // For flour: the type (e.g., "bread flour")
  proteinContent Float?   // For flour: protein percentage (e.g., 12.5)
  sortOrder      Int      @default(0)       // To maintain ingredient order
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([loafId])
}

model CribbageGame {
  id               Int      @id @default(autoincrement())
  date             DateTime @default(now())
  drewScore        Int
  aliScore         Int
  coffeeShop       String   @db.VarChar(255)
  coffeeBuyer      String   @db.VarChar(50)  // "drew" or "ali"
  drewCoffeeRating Int?     // 1-10
  aliCoffeeRating  Int?     // 1-10
  notes            String?  @db.Text
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([date])
}
