// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String   @db.VarChar(500)
  img         String   @db.VarChar(500)
  height      Float
  read          String?
  dateStarted   String?  @db.VarChar(100)
  dateFinished  String?  @db.VarChar(100)
  author        String?  @db.VarChar(500)
  pages       Int?
  genre       String?  @db.VarChar(255)
  description String?  @db.Text
  rating      Int?     // Legacy - to be removed after migration

  // Multi-factor rating system (1-5 scale each)
  ratingWriting       Int?
  ratingPlot          Int?
  ratingCharacters    Int?
  ratingPacing        Int?
  ratingWorldBuilding Int?
  ratingEnjoyment     Int?
  ratingRecommend     Int?
  ratingOverall       Float?            // Auto-calculated or manual override
  ratingOverrideManual Boolean @default(false)

  shelf       Int      @default(1)
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([title])
  @@index([author])
  @@index([read])
  @@index([shelf])
  @@index([position])
  @@index([rating])
  @@index([ratingOverall])
}

model Setting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model SourdoughLoaf {
  id              Int      @id @default(autoincrement())
  date            DateTime @default(now())
  initialMixTime  String   @db.VarChar(50)  // e.g., "9:30 AM"
  flourGrams      Int?
  flourType       String?  @db.VarChar(255)
  waterGrams      Int?
  starterGrams    Int?
  stretchFolds    Json?    // Array of times, e.g., ["10:00", "10:30", "11:00"]
  firstProofTime     String?  @db.VarChar(50)  // Time first proof started
  firstProofLocation String?  @db.VarChar(50)  // "oven", "counter", or "fridge"
  secondProofTime    String?  @db.VarChar(50)  // Time second proof started
  secondProofLocation String? @db.VarChar(50)  // "oven", "counter", or "fridge"
  bakeEvents      Json?    // Array of {time, temp, date?}, e.g., [{"time": "14:00", "temp": 450, "date": "2024-01-15"}]
  bakeEndTime     String?  @db.VarChar(50)  // Time loaf was removed from oven
  bakeEndDate     String?  @db.VarChar(50)  // Date loaf was removed (if different from loaf date)
  crossSectionWidth  Float?  // Width of cross section in inches
  crossSectionHeight Float?  // Height of cross section in inches
  notes           String?  @db.Text
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([date])
}
